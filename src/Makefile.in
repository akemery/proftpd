CC=@CC@
@SET_MAKE@

top_builddir=@top_builddir@
top_srcdir=@top_srcdir@
srcdir=@srcdir@
VPATH=@srcdir@
LDFLAGS=@LDFLAGS@
PICO_LIBS=@PICO_LIBS@
PICO_LDFLAGS=@PICO_LDFLAGS@
PICO_CFLAGS=@PICO_CFLAGS@

include ../Make.rules


all:
	@echo "Running make from top level directory."
	cd ../; $(MAKE) all

Makefile: Makefile.in ../config.status
	cd ../ && ./config.status

.c.o:
	$(CC) $(CPPFLAGS) $(PICO_CFLAGS) $(CFLAGS) $(PICO_LDFLAGS) -c $< $(PICO_LIBS)


src: $(OBJS) $(FTPDCTL_OBJS)

clean:
	$(RM) *.o

depend:
	$(MAKEDEPEND) $(CPPFLAGS) $(top_srcdir)/src/*.c 2>/dev/null
	$(MAKEDEPEND) $(CPPFLAGS) -fMakefile.in $(top_srcdir)/src/*.c 2>/dev/null

distclean: clean
	-$(RM) *.gcda *.gcno

clang-tidy:
	clang-tidy $(SRCS) -- $(CPPFLAGS) $(CFLAGS)
